<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="544.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ucdenver.catalogapp.CatalogController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Connecting to Catalog Application...." textFill="#332494">
            <font>
                <Font size="38.0" />
            </font>
        </Label>
        <Label layoutX="43.0" layoutY="69.0" text="Please enter your server's Port, and IP address" textFill="#302190">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <Label layoutX="195.0" layoutY="149.0" text="Port:" textFill="#37259e">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <Label layoutX="210.0" layoutY="205.0" text="IP:" textFill="#2e2c9a">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <TextField fx:id="txtPort" layoutX="248.0" layoutY="146.0" prefHeight="25.0" prefWidth="358.0" />
        <TextField fx:id="txtIP" layoutX="248.0" layoutY="202.0" prefHeight="25.0" prefWidth="358.0" />
        <Button fx:id="btnConnect" layoutX="248.0" layoutY="260.0" mnemonicParsing="false" onAction="#ipToLogin" prefHeight="25.0" prefWidth="92.0" text="Connect" textFill="#272786" />
        <Button fx:id="btnExit" layoutX="321.0" layoutY="483.0" mnemonicParsing="false" onAction="#exitApp" prefHeight="25.0" prefWidth="70.0" text="Exit" textFill="#342ea4" />
    </children>
</AnchorPane>
